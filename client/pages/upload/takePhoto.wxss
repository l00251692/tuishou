.parent{
  width: 100%;
  height: 100vh;
  background-color:#696969;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.camera{
   width: 100%;
   height: 470rpx;
   position: relative;
   border-width:4rpx;
   border-color:#6495ed;
   border-style:dotted;
   box-sizing:border-box;
} 


.auth{
  position: relative;
  width:100%;
  margin-top: 60rpx;
  color: #6495ed;
  background-color:#696969;
  height:80rpx;
  line-height:80rpx;
  font-size:34rpx;
}

.auth::after{
  border: none;
}


.background-cover{
  width: 100%;
  height: 100;
}

.tip{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  margin-top: 60rpx;
  z-index: 20;
}

.info{
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  padding-top: 20rpx;
  font-size:34rpx;
}

.info2{
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  padding-top: 20rpx;
  font-size:34rpx;
}

.button{
  display: flex;
  position: fixed;
  bottom: 100rpx;
}

.button .takephoto{
  flex:1;
  width: 100rpx;
  height: 100rpx;
  margin-left: 325rpx;
}

.button .cancel{
  flex:1;
  width: 80rpx;
  height: 80rpx;
  margin-right: 100rpx;
  margin-left: 200rpx;
}