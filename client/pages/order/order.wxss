.parent{
  height: 100%;
}

.form_info{
  padding-bottom: 100rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.reporter-detail{
    display: flex;
    flex-direction: column;
    border-bottom: 1px solid #eee;
    margin-top: 15rpx;
    overflow: hidden;
}
.reporter-detail-title{
    color: #888;
    margin: 5rpx 0 5rpx 30rpx;
}
.reporter-detail-item{
    display: flex;
    align-items: center;
    height: 88rpx;
    border-bottom: 1px solid #e5e5e5;
    background-color: #fff;
    padding-left: 30rpx;
}

.reporter-detail-name{
    font-size: 11pt;
}

.reporter-detail-input{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-right: 30rpx;
    padding-left: 30rpx;
}
.reporter-detail-input input{
    font-size: 10pt;
    width: 100%;
}

.reporter-detail-input .location{
    font-size: 10pt;
    width: 100%;
}

.reporter-detail-input .location2{
    font-size: 10pt;
    color: #999;
    width: 100%;
}

.input-placeholder {
    font-size: 10pt;
}

.reporter-img{
  display: flex;
  background-color: #fff;
  align-items: center;
  border-top: 1px solid #eee;
  padding-left: 30rpx;
}

.reporter-img-name{
  font-size: 11pt;
}

.reporter-img-idcard-front{
  position: relative;
  width: 200rpx;
  height: 170rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
  
}

.reporter-img-idcard-front image{
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}

.reporter-img-idcard-back{
  position: relative;
  width: 200rpx;
  height: 170rpx;
  margin-left: 30rpx;
}

.reporter-img-idcard-back image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.remind{
  text-align: center;
  background-color: #fff;
  font-size: 32rpx;
  width: 100%;
  color: #6495ed;
  font-style: initial;
  font-weight: bold;
}

.help-img {
  width: 11pt;
  height: 11pt;
  margin: 0 7rpx;
}

.submit-declare{
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    bottom:0;
    height: 80rpx;
    width: 100%;
    border-radius: 3px;
    text-align: center;
    background-color: #6495ed;
    color: #fff;
    font-size: 12pt;
}
.submit-declare-button::after{
  border: none;
}
.submit-declare:active{
  opacity: .8;
}

.submit-declare button{
  background-color: #6495ed;
  width: 100%;
  color: #fff;
}

.help {
  position: fixed;
  z-index: 100;
  top: 300rpx;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.box {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  width: 80%;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 0 50px rgba(22,22,22,.35);
  transform: translate3d(0,-400rpx,0);
}
.box-hd {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  border-bottom: 1px solid #eee;
}
.box-title {
  font-size: 13pt;
}
.box-close {
  position: absolute;
  right: 20rpx;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx;
}
.box-bd {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 15rpx 40rpx 30rpx;
}
.help-q {
  color: #999;
  font-size: 11pt;
  line-height: 200%;
  margin-top: 5rpx;
}
.help-a {
  text-indent: 1em;
  line-height: 160%;
  display: flex;
  flex-direction: column;
}
.help-a text{
  word-break: break-all;
}

